{
  "name": "cypress-sweetshop-tests",
  "version": "1.0.0",
  "description": "Cypress E2E tests for Sweet Shop demo application",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:headed": "cypress run --headed",
    "cy:open": "cypress open",
    "cy:run": "cypress run --spec 'cypress/e2e/sweetshop.*.cy.js'",
    "cy:run:smoke": "cypress run --spec 'cypress/e2e/sweetshop.smoke.cy.js'",
    "cy:run:login": "cypress run --spec 'cypress/e2e/sweetshop.login.cy.js'",
    "cy:run:basket": "cypress run --spec 'cypress/e2e/sweetshop.basket.cy.js'",
    "cy:run:catalog": "cypress run --spec 'cypress/e2e/sweetshop.catalog.cy.js'",
    "cy:run:buying": "cypress run --spec 'cypress/e2e/sweetshop.buying.cy.js'",
    "cy:run:mainpage": "cypress run --spec 'cypress/e2e/sweetshop.mainpage.cy.js'"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "sweetshop"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.6.0"
  }
}
